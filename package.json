{
  "name": "@masum-nishat/template-outlet-mcp",
  "version": "2.0.3",
  "description": "MCP server for Alpine.js Template Outlet documentation - enables AI assistants to search and retrieve Template Outlet docs",
  "type": "module",
  "main": "index.js",
  "bin": {
    "template-outlet-mcp": "./index.js"
  },
  "files": [
    "index.js",
    "src/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run lint && npm run format:check",
    "prepublishOnly": "npm test"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "alpinejs",
    "alpine",
    "documentation",
    "template-outlet",
    "model-context-protocol",
    "claude",
    "ai",
    "recursive-components"
  ],
  "author": "Masum",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MasumNishat/template-outlet-mcp.git",
    "directory": "template-outlet-mcp"
  },
  "homepage": "https://github.com/MasumNishat/template-outlet-mcp#readme",
  "bugs": {
    "url": "https://github.com/MasumNishat/template-outlet-mcp/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8"
  },
  "peerDependencies": {
    "alpine-template-outlet": "*"
  },
  "peerDependenciesMeta": {
    "alpine-template-outlet": {
      "optional": true
    }
  }
}
